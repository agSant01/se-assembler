<Window x:Class="Simulator_UI.SevenSegmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator_UI"
        mc:Ignorable="d"
        Title="SevenSegmentWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
          <RowDefinition/>
          <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:SevenSegmentDisplay Grid.Row="0" Grid.ColumnSpan="3" x:Name="Display" Margin="20"></local:SevenSegmentDisplay>

      <Label Grid.Row="1" Grid.Column="0" Content="Port Assigned: " Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15" Background="Black" FontSize="14"/>
      <TextBox Margin="15" Grid.Row="1" Width="100" Grid.Column="1" Name="tbPort" HorizontalAlignment="Left" VerticalContentAlignment="Center" TextAlignment="Left" TextWrapping="WrapWithOverflow"
               VerticalAlignment="Top" FontSize="14" AcceptsReturn="True"
                SelectionOpacity="3" ToolTip="Port to connect IO Device" FontWeight="Medium" FontStyle="Normal" MaxLines="1"/>
      <ToggleButton Margin="15" Grid.Row="1" Grid.Column="2" Name="activeToggle" Content="Inactive" Checked="Toggle_Activate" Background="Red" Unchecked="Toggle_Deactivate" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" ClipToBounds="True" VerticalContentAlignment="Center" UseLayoutRounding="True">
        <ToggleButton.Style>
          <Style TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="Green"/>
            <Style.Triggers>
              <Trigger Property="IsChecked" Value="true">
                <Setter Property="Background" Value="Green"/>
              </Trigger>
            </Style.Triggers>

          </Style>
        </ToggleButton.Style>
      </ToggleButton>
    </Grid>
</Window>
